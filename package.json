{
  "name": "rn-snackbar",
  "version": "1.0.2",
  "description": "A react native snackbar with dialog options",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "prepublish": "npm run build",
    "clean": "rimraf dist",
    "build": "npm run clean && babel src --out-dir dist --source-maps",
    "start": "node dist/index.js",
    "check": "npm run lint && npm run flow && npm test",
    "lint": "standard --fix",
    "test": "jest",
    "flow": "flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urbanchrisy/rn-snackbar.git"
  },
  "keywords": [
    "snackbar",
    "react",
    "react-native"
  ],
  "author": "Christian Mitchell via 9gag Inc library, https://github.com/9gag-open-source/react-native-snackbar-dialog",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/urbanchrisy/rn-snackbar/issues"
  },
  "babel": {
    "presets": [
      "es2016",
      "react-native"
    ],
    "env": {
      "development": {
        "plugins": [
          "flow-react-proptypes"
        ]
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "expect"
    ]
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|static-container)"
    ]
  },
  "homepage": "https://github.com/urbanchrisy/rn-snackbar#readme",
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-flow-react-proptypes": "^17.1.2",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-react-native": "^1.9.1",
    "prop-types": "^15.6.0",
    "react-mixin": "^3.0.0",
    "react-native-root-siblings": "^2.2.0",
    "react-timer-mixin": "^0.13.3",
    "rimraf": "^2.5.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.0",
    "enzyme": "^2.7.0",
    "flow-bin": "^0.46.0",
    "jest": "^20.0.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-native": "^0.42.0",
    "react-test-renderer": "^15.4.2",
    "standard": "^10.0.0"
  }
}
